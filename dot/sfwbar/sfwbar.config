Set Term = "kitty"

Function("SfwbarInit") {}

placer {
  children = true
  xorigin = 5
  yorigin = 5
  xstep = 5
  ystep = 5
}

switcher {
  cols = 5
  icons = true
  interval = 700
  labels = false
}

include("winops.widget")
include("cal.widget")

layout "sfwbar" {
  bar_id = "bar-0"
  exclusive_zone = "auto"
  layer = "top"
  mirror = "*"

  pager {
    action[Drag] = WorkspaceActivate
    pins = "1","2","3","4"
    preview = true
    rows = 1
    style = "pager"
  }

  taskbar {
    action[Drag] = Focus
    action[RightClick] = Menu "winops"
    filter = workspace
    icons = true
    labels = true
    rows = 1
    sort = false
    style = "taskbar"
  }

  label { css = "* { -GtkWidget-hexpand: true }" }

  #include("ncenter.widget")
  #include("cpu.widget")
  include("memory.widget")
  include("bluez.widget")
  include("volume.widget")
  include("network-module.widget")
  include("battery-svg.widget")

  grid {
    css = "* { -GtkWidget-direction: bottom; }"
    action[0] = Function "XCalInit"
    action = Function "XCalPopUp"
    label {
      value = Time("%k:%M")
      style ="clock"
    }
    label {
      value = Time("%x")
      style ="clock"
    }
  }

  include("showdesktop.widget")
}

#CSS

button,
button image {
  min-height: 0px;
  outline-style: none;
  box-shadow: none;
  background-image: none;
  border-image: none;
}

button#pager_item.focused,
button#taskbar_item.focused {
  background-color: rgba(199,227,255,0.6);
}

button#pager_item {
  border-radius: 5px;
  border: none;
  outline: 0px;
  margin-right: 2px;
  margin-left: 2px;
  padding: 0px;
  -GtkWidget-halign: center;
  -GtkWidget-valign: center;
}

button#pager_preview {
  border-radius: 0;
  border-color: #000000;
  border-width: 0.25mm;
  color: #777777;
  min-width: 5cm;
  min-height: 2.8125cm;
}

button#startmenu,
button#module {
  border: none;
  padding: 3px;
  margin: 0px;
  -GtkWidget-vexpand: true;
}

button#startmenu image,
button#module image {
  min-height: 16px;
  min-width: 16px;
  padding: 0px;
  margin: 0px;
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
}

button#taskbar_item:hover {
  background-color: rgba(213,213,213,0.6);
}

button#taskbar_item {
  padding: 3px;
  border-radius: 3px;
  border-width: 0px;
  -GtkWidget-hexpand: false;
}

button#taskbar_item grid {
  -GtkWidget-valign: center;
}

button#taskbar_item image {
  min-width: 20px;
  min-height: 20px;
  padding-right: 6px;
  -ScaleImage-symbolic: false;
}

button#taskbar_item.minimized label {
  color: alpha(currentColor, 0.6);
}

button#tray_item.passive {
  -GtkWidget-visible: false;
}

button#tray_item {
  margin: 0px;
  border: none;
  padding: 0px;
}

button#tray_item image {
  -GtkWidget-valign: center;
  -GtkWidget-vexpand: true;
  min-height: 16px;
  min-width: 16px;
  padding: 3px;
  margin: 0px;
  border: none;
}

grid#pager {
  border-radius: 3px;
  border-color: @theme_fg_color;
  border-style: solid;
  border-width: 1px;
  margin: 2px;
  padding: 0px;
}

grid#switcher { 
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-hexpand: true;
}

grid#switcher_item.focused image,
grid#switcher_item.focused {
  background-color: #bbddff;
}

grid#switcher_item image,
grid#switcher_item {
  min-width: 50px;
  min-height: 50px;
  border-radius: 5px;
  padding: 5px;
  -GtkWidget-direction: right;
  -GtkWidget-hexpand: true;
  -ScaleImage-symbolic: false;
}

grid#taskbar > :not(:last-child) button#taskbar_item {
  border-radius: 0px;
  border-right: 1px solid alpha(@theme_fg_color,0.15);
}

image {
  -ScaleImage-symbolic: true;
}

label {
  font-size: 12px;
  text-shadow: none;
}

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
  font: 10px Sans;
}

#menu_item,
#menu_item image,
#menu_item label {
  -GtkWidget-halign: start;
}

#menu_item image {
  min-width: 16px;
  min-height: 16px;
  padding-right: 2px;
}

window#switcher { 
  border: 1px solid @borders;
  border-radius: 6px; 
  padding: 60px; 
  -GtkWidget-hexpand: true;
}
