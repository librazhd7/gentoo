<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
  <menu id="client-menu">
    <separator label="gentoo" />
    <!--
    <menu id="workspaces" label="workspace">
      <item label="always on visible workspace"><action name="ToggleOmnipresent" /></item>
      <item label="left"><action name="SendToDesktop" to="left" /></item>
      <item label="right"><action name="SendToDesktop" to="right" /></item>
    </menu>
    -->
    <item label="always on top"><action name="ToggleAlwaysOnTop" /></item>
    <item label="shade"><action name="ToggleShade" /></item>
    <item label="minimize"><action name="Iconify" /></item>
    <item label="maximize"><action name="ToggleMaximize" /></item>
    <item label="close"><action name="Close" /></item>
  </menu>
  <menu id="root-menu">
    <separator label="gentoo" />
    <item label="chrome" icon="google-chrome"><action name="Execute" command="google-chrome-stable" /></item>
    <item label="kitty" icon="kitty"><action name="Execute" command="kitty" /></item>
    <item label="ranger"><action name="Execute" command="kitty ranger" /></item>
    <separator label="apps" />
    <menu id="editor-menu" label="editor">
      <item label="blender"><action name="Execute" command="blender-4.4" /></item>
      <item label="gimp" icon="gimp"><action name="Execute" command="gimp" /></item>
      <item label="libreoffice" icon="libreoffice.25.2-base"><action name="Execute" command="libreoffice25.2" /></item>
      <item label="vscode"><action name="Execute" command="vscode" /></item>
    </menu>
    <menu id="multimedia-menu" label="multimedia">
      <menu id="grim-menu" label="grim">
        <item label="full"><action name="Execute" command="grim" /></item>
        <item label="region"><action name="Execute" command="grim -g $(slurp)" /></item>
      </menu>
      <item label="obs"><action name="Execute" command="obs" /></item>
      <item label="vlc"><action name="Execute" command="vlc" /></item>
    </menu>
    <menu id="games-menu" label="games">
      <item label="minecraft" icon="minecraft-launcher"><action name="Execute" command="minecraft-launcher" /></item>
      <item label="steam" icon="steam"><action name="Execute" command="steam" /></item>
      <item label="supertux2" icon="supertux2"><action name="Execute" command="supertux2" /></item>
    </menu>
    <separator label="system" />
    <item label="nmtui"><action name="Execute" command="kitty nmtui" /></item>
    <item label="nvidia"><action name="Execute" command="nvidia-settings" /></item>
    <menu id="bluetooth-menu" label="bluetooth">
      <item label="disable"><action name="Execute" command="bluetooth off" /></item>
      <item label="enable"><action name="Execute" command="bluetooth on" /></item>
    </menu>
    <menu id="pipewire-menu" label="pipewire">
      <!--
      <item label="raise audio [+5%]"><action name="Execute" command="wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+" /></item>
      <item label="lower audio [-5%]"><action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-" /></item>
      -->
      <item label="mute audio"><action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle" /></item>
      <item label="mute microphone"><action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle" /></item>
    </menu>
    <menu id="wine-menu" label="wine">
      <item label="winecfg" icon="wine-winecfg"><action name="Execute" command="winecfg" /></item>
      <item label="winetricks" icon="winetricks"><action name="Execute" command="winetricks" /></item>
      <item label="regedit"><action name="Execute" command="regedit" /></item>
    </menu>
    <menu id="systemctl-menu" label="systemctl">
      <item label="logout"><action name="Execute" command="systemctl exit" /></item>
      <item label="suspend"><action name="Execute" command="systemctl suspend" /></item>
      <item label="hibernate"><action name="Execute" command="systemctl hibernate" /></item>
      <item label="reboot"><action name="Execute" command="systemctl reboot" /></item>
      <item label="poweroff"><action name="Execute" command="systemctl poweroff" /></item>
    </menu>
    <separator />
    <menu id="labwc-menu" label="labwc" icon="labwc">
      <item label="refresh"><action name="Reconfigure" /></item>
      <item label="nuke"><action name="Exit" /></item>
    </menu>
  </menu>
</openbox_menu>
